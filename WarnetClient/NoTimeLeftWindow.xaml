																HorizontalAlignment="Center"
																Text="Waktu habis"
																FontSize="72" FontWeight="Bold" Foreground="White" >
																				<TextBlock.Effect>
																								<DropShadowEffect Color="#FFFFAF00" Direction="0" BlurRadius="24" ShadowDepth="0" Opacity="0.75"/>
																				</TextBlock.Effect>
																
